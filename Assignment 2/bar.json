{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Orders by Customer Segment (2020)", "fontSize": 18, "font": "Open Sans"},
  "width": 390,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/heyheyhey01/FIT3179--2-/main/Assignment%202/Total_Orders_B.csv"
  },
  "params":[
    {
      "name": "Category_selection", 
      "bind": {
        "input": "select",
        "options": [
          null,
          "Furniture",
          "Office Supplies",
          "Technology"
        ],
        "labels": [
          "Show All",
          "Furniture",
          "Office Supplies",
          "Technology"
        ],
        "name": "Product Selection"
      }
    }
  ],
  "transform":[
    {
      "filter": "Category_selection == null || datum.Category == Category_selection"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "aggregate": "count",
          "field": "Category",
          "title": "Orders",
          "axis": {
        "tickCount": 10,
        "title": "Orders"
      }
        },
        "y": {"field": "Segment", "title": "Customer segment"},
        "color": {
          "field": "Category", 
          "type": "nominal",
          "scale": {"range": ["#FFE085", "#67BED0", "#F27E29"]},
          "title": "Product Category"},
        "tooltip": [
        {"field": "Segment", "type": "ordinal", "title": "Customer segment"},
        {"field": "Category", "type": "nominal", "title": "Product category" },
        {
          "aggregate": "count",
          "field": "Category",
          "type":"quantitative",
          "title": "Total Orders"
        }
      ]
      }
    }
  ],
  "config": {}
}